
	<br>
	<ul class="list-unstyled">

      <% @profile[:comments].each do |comment| %>

      <p id="activity-description"><%= comment[:user]["name"]%> commented "<%= comment["content"]%>"</p>
      <%= link_to post_path(comment[:post]["id"]) do %>
        <li class="media">
          <img src="..." class="align-self-center mr-3" alt="...">
          <div class="media-body">
            <table width="100%"><tr width=100%>
              <td width="90%" id="post">
                <ul class="list-inline">
                  <li class="list-inline-item post-title"><%= comment[:post]["title"] %></li>
                  <li class="list-inline-item post-info"><%= comment[:user]["email"] %></li>
                </ul>
                <ul class="list-inline">
                  <li class="list-inline-item post-info"><%= comment[:post]["creation_date"] %></li>
                  <li class="list-inline-item post-info">Comments: <%= comment[:post]["comments"] %></li>
                </ul>
              </td>
              <td width="5%" id="votes">
                <i id="vote" class="fas fa-caret-up"></i>
                  <p><%= comment[:post]["votes"] %></p>
                <i id="vote" class="fas fa-caret-down"></i>
              </td>
              <td width="10%" id="votes">
              </td>
            </tr></table>
          </div>
        </li>
    	<% end %>
    	<hr>

      <% end %>
    </ul>


	

	<ul class="list-unstyled">

      <% @profile[:votes].each do |vote| %>

